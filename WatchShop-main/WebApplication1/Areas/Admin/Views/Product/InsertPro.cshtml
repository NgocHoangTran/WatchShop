@model WebApplication1.Models.Product
@{
    ViewBag.Title = "InsertPro";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("AddPro", "Product", FormMethod.Post))
{
    <div class="form-group">
        <label for="productName">Product Name</label>
        @Html.TextBoxFor(model => model.productName, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="productDescription">Description</label>
        @Html.TextAreaFor(model => model.productDescription, new { @class = "form-control", @rows = "5" })
    </div>

    <div class="form-group">
        <label for="Price">Picture</label>
        @Html.TextBoxFor(model => model.productPicture, new { @class = "form-control" })
        <button type="button" class="btn btn-primary" id="browse_add">Browse</button>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="promotionPrice">Promotion Price</label>
        @Html.TextBoxFor(model => model.promotionPrice, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="categoryID">Category ID</label>
        @Html.DropDownList("categoryID", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.categoryID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="viewCount">Count</label>
        @Html.TextBoxFor(model => model.viewCount, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        <div>Status : </div>
        <label for="productStatus">True</label>
        @Html.RadioButtonFor(model => model.productStatus, true)
        <br />
        <label for="productStatus">Flase</label>
        @Html.RadioButtonFor(model => model.productStatus, false)
    </div>

    <div class="form-group">
        <label for="BrandID">Brand id</label>
        @Html.DropDownList("BrandID", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.BrandID, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Add product</button>
}

@section scripts{
    <script>
        $("#browse_add").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $("#productPicture").val(url);
            };
            finder.popup();
        });
    </script>
}