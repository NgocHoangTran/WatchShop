    <script>
        $(document).ready(function () {
            $("#login").click(function () {
                var acc = $("#account").val();
                var pass = $("#password").val();
                $.ajax({
                    url: "/Home/Login",
                    data: { account: acc, password: pass },
                    success: function (response) {
                        if (response == "fail") {
                            $("#alert").removeClass("d-none");
                            $("#alert").html("Login failed");
                        }
                        else {
                            $('#exampleModal').modal('hide');
                        }
                    }
                });
            });

            $("#account").click(function () {
                $("#alert").addClass("d-none");
            });
            $("#password").click(function () {
                $("#alert").addClass("d-none");
            });

            $("#forgotPass").click(function () {
                $('#exampleModal').modal('hide');
                $('#ModalForgotPass').modal('show');

            });

            $('#send').click(function () {
                var mail = $('#email').val();
                console.log(mail);
                $.ajax({
                    url: "/Home/SendMail",
                    data: { mail: mail }
                });
            });

            $('#verify').click(function () {
                var code = $('#code').val();
                $.ajax({
                    url: "/Home/ValidCode",
                    data: { code: code },
                    success: function (response) {
                        if (response == "Valid")
                            window.location.replace("/Home");
                        else {
                            $('#noti').text(response);
                        }
                    }
                });
            });
            $('#code').click(function () {
                $('#noti').text("");
            })
        });
    </script>

